@{
    ViewData["Title"] = "Persons";
}
@section Scripts{
    <environment names="Development">
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/angular-sanitize/angular-sanitize.js"></script>
        <script src="~/lib/angular-route/angular-route.js"></script>
        <script src="~/lib/angular-ui-grid/ui-grid.js"></script>
        <script src="~/lib/showdown/dist/showdown.js"></script>
        <script src="~/js/simpleControls.js"></script>
        <script src="~/js/app-persons.js" asp-append-version="true"></script>
        <script src="~/js/personsController.js" asp-append-version="true"></script>
        <script src="~/js/personAddController.js" asp-append-version="true"></script>
        <script src="~/js/personEditController.js" asp-append-version="true"></script>
        <script src="~/js/eventAddController.js" asp-append-version="true"></script>
        <script src="~/js/eventEditController.js" asp-append-version="true"></script>
        <script src="~/js/relationshipAddController.js" asp-append-version="true"></script>
        <script src="~/js/relationshipEditController.js" asp-append-version="true"></script>
